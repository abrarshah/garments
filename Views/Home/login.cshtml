@model AddTemplateToMVC4.Models.customer
<script src="~/Scripts/jquery.validate.js"></script>
@using (@Html.BeginForm("userLogin", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    
    <fieldset>
        <legend>Login</legend>
        <h3>@ViewBag.msg</h3>

        <div class="editor-label">
            @Html.Label("Login Name")
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(m=>m.uname)
            @Html.ValidationMessageFor(m => m.uname)           
        </div>

        <div class="editor-label">
            @Html.Label("Password")

        </div>
        <div class="editor-field">
            @Html.PasswordFor(m=>m.passwd)
            @Html.ValidationMessageFor(m=>m.passwd)
        </div>
        <p>
            <input type="submit" value="Login" />
        </p>
    </fieldset>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
